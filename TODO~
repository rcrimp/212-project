CREATE TABLE users (
  username VARCHAR(255) NOT NULL,
  password CHAR(40) NOT NULL,
  name VARCHAR(255) NOT NULL,
  surname VARCHAR(255) NOT NULL,
  email VARCHAR(255) NOT NULL,
  type TINYINT(3) UNSIGNED NOT NULL,
  PRIMARY KEY (username)
);


